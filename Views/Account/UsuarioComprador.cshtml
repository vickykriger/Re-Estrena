<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Re-Estrena - Usuario</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <div>
            <a href="@Url.Action("VerPaginaPrincipalC", "Account")">
                <img src="~/imagenes/logo.png" alt="Logo Re-Estrena">
                <h1>Re-Estrena</h1>
            </a>
            <nav>
                <ul>
                    <li><a href='@Url.Action("VerPaginaPrincipalV", "Account")' onclick="validar(this)">Vender</a></li>
                    <li><a href='@Url.Action("VerCarrito", "Purchase")'><img src="~/imagenes/carrito.png" alt="Carrito" title="Carrito"></a></li>
                    <li><a href='@Url.Action("VerUsuarioC", "Account")'><img src="~/imagenes/perfil.png" alt="Usuario" title="Perfil usuario"></a></li>
                    <li><a href='@Url.Action("VerNotificaciones", "Account")'><img src="~/imagenes/campana.png" alt="Notificaciones" title="Notificaciones"></a></li>
                    <li><a href='@Url.Action("VerMensajes", "Account")'><img src="~/imagenes/mensaje.png" alt="Mensajes" title="Mensajes"></a></li>
                </ul>
            </nav>
        </div>
    </header>
<main>
    <section class="userPerfil">

        <div class="fotoU">
            @{
                if(ViewBag.Usuario.Foto != null)
                {
                    <img src="~/imagenes/@ViewBag.Usuario.Foto" alt="@ViewBag.Usuario.Foto">
                }
                else
                {
                    <button type="button">Subir foto</button>
                }
            }
           
        </div>
        <div class="infoU">
            <h2>@ViewBag.Usuario.NombreCompleto</h2>
            <p>@ViewBag.Usuario.NombreUsuario</p>
            <p>@ViewBag.Usuario.Descripcion</p>
        </div>

    </section>


    <section class="userLista">
    <h3>Favoritas:</h3>
        @{
            string idString = Context.Session.GetString("user");
            int idUsuarioLogueado = 0;
            int idListaFavoritos = 0;
            if (int.TryParse(idString, out idUsuarioLogueado) && idUsuarioLogueado > 0)
            {
                idListaFavoritos = BD.devolverIdListaUsuario(idUsuarioLogueado);
            }
            if (ViewBag.Favoritas != null && ViewBag.Favoritas.Count > 0)
            {
                <section class="productos-grid">
                    @foreach (var publicacion in ViewBag.Favoritas)
                    {
                        bool esFavorito = false;
                        if (idListaFavoritos > 0)
                        {
                            esFavorito = BD.EstaEnLista(publicacion.IdPublicacion, idListaFavoritos);
                        }
                        string imagenCorazon = esFavorito ? "likeado.png" : "corazon.png";
                        string altCorazon = esFavorito ? "Quitar de favoritos" : "Añadir a favoritos";
                        <div class="producto">
                            <h3>@publicacion.NombreProducto</h3>
                            <form method="post" action='@Url.Action("likear", "Account")'> 
                                <input type="hidden" name="idPublicacion" value="@publicacion.IdPublicacion" />
                                    <button type="submit" class="like-button">
                                        <img id="corazon-@publicacion.IdPublicacion" 
                                            src="~/imagenes/@imagenCorazon" 
                                            alt="@altCorazon" 
                                            title="@altCorazon" />
                                    </button>
                            </form>
                            <div class="productoIMG">
                            <img src="~/imagenes/@publicacion.Foto" alt="@publicacion.NombreProducto">
                            </div>
                            <p>@publicacion.Descripcion</p>
                            <div class="tagPrecio">
                                <p class="etiquetas-placeholder" id="etiquetas-@publicacion.IdPublicacion">...</p>
                                <p class="precio"> $@publicacion.Precio</p>
                            </div>
                            <a href='@Url.Action("verPublicacion", "Post", new { idPublicacion = publicacion.IdPublicacion })'>Ver publicacion</a>
                        </div>
                    }
                </section>
            }
            else
            {
                <p>No hay publicaciones favoritas en este momento.</p>
            }
        }
</section>

    <section class="cerrarSesion">
        <form asp-action="cerrarSesion" asp-controller="OnBoarding" method="post">
            <button type="submit">Cerrar sesión</button>
        </form>
    </section>
    @if(ViewBag.ErrorMessage != null)
        {
            <p>@ViewBag.ErrorMessage</p>
        }
    <script asp-src-include="~/js/site.js"></script>
</main>

</body>





@{
    ViewData["Title"] = "Carrito de Compras";
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header>
        <div>
            <a href="@Url.Action("VerPaginaPrincipalC", "Account")">
                <img src="~/imagenes/logo.png" alt="Logo Re-Estrena">
                <h1>Re-Estrena</h1>
            </a>
            <nav>
                <ul>
                    <li><a href='@Url.Action("VerPaginaPrincipalV", "Account")' onclick="validar(this)">Vender</a></li>
                    <li><a href='@Url.Action("VerCarrito", "Purchase")'><img src="~/imagenes/carrito.png" alt="Carrito" title="Carrito"></a></li>
                    <li><a href='@Url.Action("VerUsuarioC", "Account")'><img src="~/imagenes/perfil.png" alt="Usuario" title="Perfil usuario"></a></li>
                    <li><a href='@Url.Action("VerNotificaciones", "Account")'><img src="~/imagenes/campana.png" alt="Notificaciones" title="Notificaciones"></a></li>
                    <li><a href='@Url.Action("VerMensajes", "Account")'><img src="~/imagenes/mensaje.png" alt="Mensajes" title="Mensajes"></a></li>
                </ul>
            </nav>
        </div>
    </header>
    <main>
        @{
            // Mensaje de Error (Ej: Producto ya en carrito, ID inválido, etc.)
            if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">
                    <p>@TempData["Error"]</p>
                </div>
            }
            // Mensaje de Éxito/Información (Ej: Producto agregado con éxito)
            if (TempData["Info"] != null)
            {
                <div class="alert alert-info">
                    <p>@TempData["Info"]</p>
                </div>
            }
        }
    <section class="carrito">
        @if (ViewBag.Carrito != null && ViewBag.Carrito.Count > 0)
        {
            foreach(Publicacion publicacion in ViewBag.Carrito)
            {
                <div class="carritoProducto">
                    <a href='@Url.Action("EliminarDelCarrito", "Purchase", new { idPublicacion = publicacion.IdPublicacion})' onClick="validar(this)"><img src="~/imagenes/tacho.png" alt="volver"></a>
                    <img src="~/imagenes/@publicacion.Foto" alt="@publicacion.NombreProducto">
                    <h3>@publicacion.NombreProducto</h3>
                    <p>@publicacion.Descripcion</p>
                    <p>@publicacion.Precio</p>
                   
                </div>
            }
             <div class="total-carrito">
            @{
                decimal total = 0;
                if (ViewBag.Carrito != null)
                {
                    foreach(Publicacion p in ViewBag.Carrito)
                    {
                        total += p.Precio;
                    }
                }
            }
            <p><strong>Total:</strong> $@total.ToString("N2")</p>
            </div>
            <form method="post" action='@Url.Action("VerMensajes", "Account")'>
                <div class="botonPub">
                    <button type="submit" onClick="return metodoDePago()">Continuar compra</button>
                </div>
            </form>
        }
        else
        {
            <div class="carrito-vacio">
                <p>Tu carrito está vacío</p>
            </div>
        }

    </section>
    @if(ViewBag.ErrorMessage != null)
        {
            <p>@ViewBag.ErrorMessage</p>
        }
    <script asp-src-include="~/js/site.js"></script>
    </main>
</body>
</html>

